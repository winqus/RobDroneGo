{
  "name": "bulletproof-nodejs",
  "version": "1.0.0",
  "description": "Bulletproof node.js",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "nodemon",
    "start:prod": "pm2 start build/src/app.js --name 'node-api-prod' --cwd '/home/www/node-app/production/' --env NODE_ENV=production,PORT=4000 --no-daemon ",
    "restart:prod": "pm2 restart 'node-api-prod",
    "stop:prod": "pm2 stop 'node-api-prod",
    "start:dev": "pm2 start build/src/app.js --name 'node-api-dev' --cwd '/home/www/node-app/development/' --env NODE_ENV=development,PORT=4001 --no-daemon ",
    "restart": "pm2 restart 'node-api-dev'",
    "stop:dev": "pm2 stop 'node-api-dev'",
    "inspect": "nodemon --inspect src/app.ts",
    "test": "mocha -r ts-node/register **/*.test.ts",
    "heroku-postbuild": "npm run build",
    "test-e2e": "node testRunner.mjs",
    "e2eTest:setEnv": "node scripts/setTestEnv.js",
    "e2eTest:physicalTeardown": "node scripts/teardownRealTestMongoDb.js",
    "e2eTest:start": "nodemon",
    "jest-coverage": "npx jest --coverage",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js -- --fix",
    "lint:src-fix": "npx eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santiq/bulletproof-nodejs.git"
  },
  "keywords": [
    "boilerplay",
    "cron",
    "jobs",
    "js",
    "javascript",
    "typescript",
    "node",
    "express"
  ],
  "author": "Santiago Quinteros",
  "license": "ISC",
  "dependencies": {
    "acorn": "^7.1.0",
    "acorn-jsx": "^5.1.0",
    "agenda": "^2.0.2",
    "agendash": "^4.0.0",
    "argon2": "^0.21.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "celebrate": "^9.1.0",
    "chai": "^4.2.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "event-dispatch": "^0.4.1",
    "eventemitter3": "^3.1.0",
    "express": "^4.16.2",
    "express-basic-auth": "^1.2.0",
    "express-jwt": "^8.4.1",
    "jest-mock-extended": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.13",
    "method-override": "^3.0.0",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "mongodb": "^4.2.1",
    "mongoose": "^6.1.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.21",
    "typedi": "^0.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@types/agenda": "^4.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^10.0.0",
    "@types/mongoose": "^5.3.17",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mocha": "^10.1.0",
    "prettier": "^1.17.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "bugs": {
    "url": "https://github.com/santiq/bulletproof-nodejs/issues"
  },
  "homepage": "https://github.com/santiq/bulletproof-nodejs#readme"
}
